<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunitobold</item>
        <item name="android:textColor">@color/bluebold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bluelight</item>
        <item name="android:fontFamily">@font/nunitoregular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edt_input">
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/bluelight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunitoregular</item>
        <item name="android:background">@drawable/background_edt</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>